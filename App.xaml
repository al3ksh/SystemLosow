<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SystemLosow"
             x:Class="SystemLosow.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="MainShellStyle" TargetType="Shell">
                <Setter Property="BackgroundColor" Value="#FF0000" />
                <Setter Property="TitleColor" Value="#FFFFFF" />
                <Setter Property="DisabledColor" Value="#CCCCCC" />
                <Setter Property="UnselectedColor" Value="#AAAAAA" />
                <Setter Property="FlyoutBackgroundColor" Value="#333333" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
